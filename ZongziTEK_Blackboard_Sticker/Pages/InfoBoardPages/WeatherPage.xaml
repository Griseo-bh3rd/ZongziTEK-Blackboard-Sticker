<Page x:Class="ZongziTEK_Blackboard_Sticker.Pages.WeatherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZongziTEK_Blackboard_Sticker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WeatherPage">

    <Grid HorizontalAlignment="Right">
        <Viewbox Margin="16,8">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <Label Name="LabelCity" FontSize="14" Content="北京市 东城区" HorizontalAlignment="Right" Margin="0,0,0,0"/>
                        <Label Name="LabelWeatherInfo" FontSize="40" Content="晴 20℃" HorizontalAlignment="Right" Margin="0,14,0,0"/>
                    </Grid>
                    <Image Name="ImageWeather" Height="58" Width="58" Source="../Resources/WeatherIcons/Sunny.png" Margin="12,0,0,0"/>
                </StackPanel>
                
            </Grid>
        </Viewbox>
    </Grid>
</Page>
